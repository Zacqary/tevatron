{
  "name": "tevatron",
  "version": "0.1.5",
  "description": "Lightweight custom elements library",
  "main": "dist/tevatron.js",
  "scripts": {
    "pretest": "$(npm bin)/tevatron -s test/component-src -t test/component-dist/components -cm",
    "test": "$(npm bin)/live-server --open=test",
    "build": "$(npm bin)/browserify src/tevatron.js -o dist/tevatron.js -t babelify -s Tevatron",
    "postbuild": "$(npm bin)/uglifyjs dist/tevatron.js -m -o dist/tevatron.min.js --preamble \"$(cat src/minified-preamble.txt)\" --source-map dist/tevatron.js.map --source-map-root dist/tevatron.js ",
    "release": "node bump"
  },
  "author": "Fast Company <dev@fastcompany.com>",
  "contributors": [
    {
      "name": "Zacqary Adam Xeper",
      "email": "zxeper@fastcompany.com"
    }
  ],
  "license": "MIT",
  "repository": "https://github.com/fastcompany/tevatron.git",
  "devDependencies": {
    "babel-eslint": "^3.1.18",
    "babel-runtime": "^5.6.7",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "colors": "^1.1.2",
    "eslint": "^0.23.0",
    "live-server": "^0.7.1",
    "semver": "^4.3.6",
    "tevatron-cli": "^0.2.0",
    "uglifyjs": "^2.4.10",
    "yesno": "0.0.1"
  }
}
