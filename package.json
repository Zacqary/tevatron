{
  "name": "tevatron",
  "version": "0.1.5",
  "description": "Lightweight custom elements library",
  "main": "dist/tevatron.js",
  "scripts": {
    "pretest": "./node_modules/.bin/tevatron -s test/component-src -t test/component-dist/components -cm",
    "test": "./node_modules/.bin/live-server --open=test",
    "build": "./node_modules/.bin/browserify src/tevatron.es6 -o dist/tevatron.js -t [ babelify --optional runtime ] -s Tevatron",
    "postbuild": "./node_modules/.bin/uglifyjs dist/tevatron.js -m -o dist/tevatron.min.js --preamble \"$(cat src/minified-preamble.txt)\" --source-map dist/tevatron.js.map --source-map-root dist/tevatron.js ",
    "release": "node bump"
  },
  "author": "Fast Company <dev@fastcompany.com>",
  "contributors": [
    {
      "name": "Zacqary Adam Xeper",
      "email": "zxeper@fastcompany.com"
    }
  ],
  "license": "MIT",
  "repository": "https://github.com/fastcompany/tevatron.git",
  "devDependencies": {
    "babel-eslint": "^3.1.18",
    "babel-runtime": "^5.6.7",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "colors": "^1.1.2",
    "eslint": "^0.23.0",
    "live-server": "^0.7.1",
    "semver": "^4.3.6",
    "tevatron-cli": "^0.2.0",
    "uglifyjs": "^2.4.10",
    "yesno": "0.0.1"
  }
}
